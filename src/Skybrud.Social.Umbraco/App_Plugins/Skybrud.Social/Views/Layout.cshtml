@inherits System.Web.Mvc.WebViewPage<Skybrud.Social.Umbraco.Models.Mvc.PageModel>

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>@Model.Title - Skybrud.Social</title>
    @*<link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet" type="text/css">*@
    
    <link href="/umbraco/assets/css/umbraco.css?cdv=1" type="text/css" rel="stylesheet">
    <link href="/umbraco/lib/font-awesome/css/font-awesome.min.css?cdv=1" type="text/css" rel="stylesheet">
    <style>
        .umb-editor-header {
            position: initial;
            line-height: 70px;
            padding: 0 20px;
        }
        .umb-editor-content {
            padding: 50px;
        }
        
        .umb-panel-header-name {
            font-size: 16px;
            font-weight: 700;
        }
        .umb-panel-header-name-right {
            font-size: 16px;
            font-weight: 700;
            color: #777;
            float: right;
        }
        .umb-empty-state {
            font-size: 17.25px;
            line-height: 22px;
            color: #68676b;
            text-align: center;
            font-size: 15px;
        }
        .umb-empty-state .faded {
            color: #817f85;
        }
        
        .umb-empty-state .btn {
            margin-top: 10px;
        }
    </style>
</head>
<body>
@*<div class="umb-app-header"></div>*@
<div class="umb-editor-header">
    <div class="umb-panel-header-name-right">Umbraco</div>
    <div class="umb-panel-header-name">Skybrud.Social</div>
</div>
<div class="umb-editor-content">
    @RenderBody()
</div>
</body>
</html>